<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonStyle">@style/Button.Primary</item>
        <item name="editTextStyle">@style/Edit</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="alertDialogTheme">@style/Theme.Dialog</item>
        <item name="android:spinnerItemStyle">@style/SpinnerSelectedItem</item>
        <item name="actionButtonStyle">@style/MenuTextAppearance</item>
    </style>

    <style name="AppTheme.Landing.Base" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_landing</item>
        <!-- For the line of the edit text -->
        <item name="colorControlNormal">@color/landing_edit_text_line</item>
    </style>

    <style name="AppTheme.Landing" parent="AppTheme.Landing.Base">
        <item name="editTextColor">@color/landing_edit_text</item>
    </style>

    <style name="AppTheme.Lock" parent="AppTheme.Landing">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Edit text -->
    <style name="Edit" parent="@style/Widget.AppCompat.EditText">
        <item name="android:minHeight">@dimen/height_single_edit</item>
        <item name="android:textSize">@dimen/subhead_text</item>
    </style>
    <!-- Dialog -->
    <style name="Theme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Menu Item Text -->
    <style name="MenuTextAppearance" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="textAllCaps">false</item>
    </style>
    <!-- Spinner -->
    <style name="SpinnerSelectedItem" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!-- Toolbar -->
    <style name="Toolbar.Base" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="Toolbar.Base" />
    <!-- Button -->
    <style name="Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Parent" parent="Theme.AppCompat.Light.NoActionBar" />
    <!-- Tab -->
    <style name="Tab.Base" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/Tab.Text</item>
    </style>

    <style name="Tab.Text" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/grey_cool</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- Tab -->

    <style name="ToolbarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_shadow</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/toolbar_shadow</item>
    </style>
    <style name="Tab" parent="Tab.Base" />

    <style name="TabShadow" />

    <style name="Loading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_overlay</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Loading.ProgressBar" parent="@android:style/Widget.ProgressBar.Inverse">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
    </style>

</resources>
